<div class="container">
    <h4>Agrega las Asignaturas</h4>
    <form action="/asignaturas/agregar" method="POST">
    <center>
<h1>ASIGNATURAS</h1> 
    </center>
    <ul></ul>
    
<div>
    <FONT COLOR="lime">
    <label for="nombre">Nombre Asignatura:</label>
    <input type="text" name="nombre" placeholder="Nombre" id="nombre"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="creditos">Cantidad Creditos:</label>
    <input type="text" name="creditos" placeholder="Creditos" id="creditos"
    class="form-control bg-dark text-white"/>
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="horas">Cantidad Horas:</label>
    <input type="text" name="horas" placeholder="Horas" id="horas"
    class="form-control bg-dark text-white"/>
    </FONT>
</div>

<center>
<button class="btn btn-success btn-sm mt-2">Agregar</button>
</center>
</form>
</div>